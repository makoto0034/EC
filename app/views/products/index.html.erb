<div class="products_container">
  <table>
    <tr>
      <%@products.each do |product|%>
        <td>
          <%=link_to product_path(product.id), target: "_blank" do%>
            <%=image_tag product.image.url,alt:product,class: "product-img"%><br>
            <%=product.name%>　￥<%=product.price%>
          <%end%>
        </td>
      <%end%>
    </tr>
  </table>
</div>
